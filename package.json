{
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.5.1",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.2",
    "@vividcat/eslint-config": "^3.1.2",
    "eslint": "8.51.0",
    "rollup": "^4.9.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.0",
    "sass": "^1.69.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.0.4",
    "vue": "^3.3.11"
  },
  "eslintConfig": {
    "extends": "@vividcat",
    "ignorePatterns": [
      "node_modules",
      "dist"
    ],
    "rules": {
      "spaced-comment": "off",
      "@stylistic/js/spaced-comment": ["error", "always", {
        "markers": ["/"],
        "exceptions": ["#__PURE__", "@__PURE__"]
      }],
      "@stylistic/ts/brace-style": "off"
    }
  }
}
