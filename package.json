{
  "name": "h21sugar",
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@8.5.1",
  "main": "index.js",
  "types": "dist/h21sugar.d.ts",
  "unpkg": "dist/h21sugar.global.js",
  "jsdelivr": "dist/h21sugar.global.js",
  "files": [
    "index.js",
    "dist"
  ],
  "keywords": [
    "ui",
    "design"
  ],
  "homepage": "https://github.com/hezulong1/sugar/tree/main/packages/sugar#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hezulong1/sugar.git"
  },
  "bugs": {
    "url": "https://github.com/hezulong1/sugar/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.2",
    "@vividcat/eslint-config": "^3.1.2",
    "eslint": "8.51.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.0.4",
    "vue": "^3.3.11"
  },
  "eslintConfig": {
    "extends": "@vividcat",
    "ignorePatterns": [
      "node_modules",
      "dist"
    ],
    "rules": {
      "spaced-comment": "off",
      "@stylistic/js/spaced-comment": [
        "error",
        "always",
        {
          "markers": [
            "/"
          ],
          "exceptions": [
            "#__PURE__",
            "@__PURE__"
          ]
        }
      ],
      "@stylistic/ts/brace-style": "off"
    }
  }
}
